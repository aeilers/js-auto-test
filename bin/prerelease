#!/usr/bin/env bash

runPrerelease () {
    if [ -n ${npm_config_preid+x} ]; then
        npm version $(semver $npm_package_version --increment $npm_config_increment --preid $npm_config_preid)
    else
        npm version $(semver $npm_package_version --increment $npm_config_increment)
    fi
}

runPrerelease()
